<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="$media:bk18"
    ohos:alignment="horizontal_center"
    ohos:orientation="vertical">

    <Text
        ohos:top_margin="10fp"
        ohos:height="match_content"
        ohos:text_color="#FFFFFF"
        ohos:width="match_content"
        ohos:text="选择关卡"
        ohos:bottom_margin="10fp"
        ohos:text_size="30fp"
        >

    </Text>

    <StackLayout
        ohos:height="match_parent"
        ohos:layout_alignment="horizontal_center"
        ohos:width="match_parent">

        <ScrollView
            ohos:height="match_content"
            ohos:width="match_content">
            <TableLayout
                ohos:height="match_content"
                ohos:id="$+id:table_layout"
                ohos:width="match_content">

            </TableLayout>


        </ScrollView>

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="bottom|right"
            ohos:orientation="horizontal"
            ohos:bottom_margin="20fp"
            ohos:right_margin="10fp"
            >

            <Image
                ohos:height="50vp"
                ohos:width="50vp"
                ohos:id="$+id:menu_image"
                ohos:image_src="$media:back_icon"
                ohos:margin="10fp"
                ohos:scale_mode="stretch"
                >

            </Image>

<!--            <Image-->
<!--                ohos:height="50vp"-->
<!--                ohos:width="50vp"-->
<!--                ohos:margin="10fp"-->
<!--                ohos:image_src="$media:back_icon"-->
<!--                ohos:id="$+id:back_image"-->
<!--                ohos:scale_mode="stretch">-->

<!--            </Image>-->

        </DirectionalLayout>



    </StackLayout>

</DirectionalLayout>