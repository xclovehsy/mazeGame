<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:margin="5fp"
    ohos:alignment="horizontal_center"
    ohos:background_element="$media:bk19"
    ohos:orientation="vertical">
    <Text
        ohos:top_margin="20fp"
        ohos:height="match_content"
        ohos:text="玩法介绍"
        ohos:text_color="#FFFFFF"
        ohos:text_size="30fp"
        ohos:width="match_content">
    </Text>

    <Text
        ohos:height="match_content"
        ohos:text="听说,在遥远的异国他乡"
        ohos:text_color="#FFFFFF"
        ohos:text_size="15fp"
        ohos:top_margin="20fp"
        ohos:width="match_content">
    </Text>

    <Text
        ohos:height="match_content"
        ohos:text="有一个埋藏着“美丽”宝藏的地方"
        ohos:text_color="#FFFFFF"
        ohos:text_size="15fp"
        ohos:top_margin="8fp"
        ohos:width="match_content">
    </Text>

    <Text
        ohos:height="match_content"
        ohos:text="千百年来,无人踏足此地"
        ohos:text_color="#FFFFFF"
        ohos:text_size="15fp"
        ohos:top_margin="8fp"
        ohos:width="match_content">
    </Text>

    <Text
        ohos:height="match_content"
        ohos:text="控制小帅闯过层层关卡"
        ohos:text_color="#FFFFFF"
        ohos:text_size="15fp"
        ohos:top_margin="8fp"
        ohos:width="match_content">
    </Text>

    <Text
        ohos:height="match_content"
        ohos:text="注意路上的小怪"
        ohos:text_color="#FFFFFF"
        ohos:text_size="15fp"
        ohos:top_margin="8fp"
        ohos:width="match_content">
    </Text>

    <Text
        ohos:height="match_content"
        ohos:text="最后有个惊喜等着你!"
        ohos:text_color="#FFFFFF"
        ohos:text_size="15fp"
        ohos:top_margin="8fp"
        ohos:width="match_content">
    </Text>

    <Button
        ohos:top_margin="20fp"
        ohos:height="40fp"
        ohos:text="确定"
        ohos:id="$+id:ok_btn"
        ohos:text_size="20fp"
        ohos:background_element="$media:button"
        ohos:text_color="#FFFFFF"
        ohos:width="110fp">

    </Button>


</DirectionalLayout>