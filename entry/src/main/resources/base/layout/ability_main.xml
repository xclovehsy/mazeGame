<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:id="$+id:game_layout"
    ohos:height="match_parent"
    ohos:background_element="$media:bk11"
    ohos:width="match_parent"
    ohos:alignment="horizontal_center"
    ohos:orientation="vertical">


    <TableLayout
        ohos:padding="10fp"
        ohos:id="$+id:map_layout"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:layout_alignment="center"
        ohos:background_element="$graphic:button"
        ohos:orientation="vertical"
        ohos:top_margin="20fp">

    </TableLayout>

<!--    ohos:background_element="#FFFAF3CC"-->




    <DirectionalLayout
        ohos:top_margin="10fp"
        ohos:height="match_content"
        ohos:orientation="horizontal"
        ohos:alignment="center"
        ohos:width="match_parent">

        <DirectionalLayout
            ohos:height="match_content"
            ohos:orientation="vertical"
            ohos:width="match_content">
            <DirectionalLayout
                ohos:height="match_content"
                ohos:orientation="horizontal"
                ohos:alignment="center"
                ohos:width="match_content">
                <Image
                    ohos:height="40fp"
                    ohos:width="40fp"
                    ohos:scale_mode="stretch"
                    ohos:image_src="$media:dengji">

                </Image>
                <Text
                    ohos:height="match_content"
                    ohos:left_margin="10fp"
                    ohos:text_color="#FFFFFF"
                    ohos:width="match_content"
                    ohos:text_size="20fp"
                    ohos:id="$+id:level_text"
                    ohos:text="level.1">
                </Text>

            </DirectionalLayout>

            <DirectionalLayout
                ohos:height="match_content"
                ohos:orientation="horizontal"
                ohos:alignment="center"
                ohos:width="match_content">
                <Image
                    ohos:height="40fp"
                    ohos:width="40fp"
                    ohos:scale_mode="stretch"
                    ohos:image_src="$media:xue">

                </Image>
                <Text
                    ohos:height="match_content"
                    ohos:left_margin="10fp"
                    ohos:text_color="#FFFFFF"
                    ohos:width="match_content"
                    ohos:text_size="20fp"
                    ohos:id="$+id:xue_text"
                    ohos:text="100">
                </Text>

            </DirectionalLayout>

            <DirectionalLayout
                ohos:height="match_content"
                ohos:orientation="horizontal"
                ohos:alignment="center"
                ohos:width="match_content">
                <Image
                    ohos:height="40fp"
                    ohos:width="40fp"
                    ohos:scale_mode="stretch"
                    ohos:image_src="$media:dao">

                </Image>
                <Text
                    ohos:height="match_content"
                    ohos:left_margin="10fp"
                    ohos:text_color="#FFFFFF"
                    ohos:width="match_content"
                    ohos:text_size="20fp"
                    ohos:id="$+id:gongji_text"
                    ohos:text="10">
                </Text>

            </DirectionalLayout>

            <DirectionalLayout
                ohos:height="match_content"
                ohos:orientation="horizontal"
                ohos:alignment="center"
                ohos:width="match_content">
                <Image
                    ohos:height="40fp"
                    ohos:width="40fp"
                    ohos:scale_mode="stretch"
                    ohos:image_src="$media:dunpai">

                </Image>

                <Text
                    ohos:height="match_content"
                    ohos:left_margin="10fp"
                    ohos:text_color="#FFFFFF"
                    ohos:width="match_content"
                    ohos:text_size="20fp"
                    ohos:id="$+id:fangyu_text"
                    ohos:text="10">
                </Text>

            </DirectionalLayout>

            <DirectionalLayout
                ohos:height="match_content"
                ohos:orientation="horizontal"
                ohos:alignment="center"
                ohos:width="match_content">
                <Image
                    ohos:height="40fp"
                    ohos:width="40fp"
                    ohos:scale_mode="stretch"
                    ohos:image_src="$media:money">

                </Image>
                <Text
                    ohos:height="match_content"
                    ohos:left_margin="10fp"
                    ohos:text_color="#FFFFFF"
                    ohos:width="match_content"
                    ohos:text_size="20fp"
                    ohos:id="$+id:money_text"
                    ohos:text="10">
                </Text>

            </DirectionalLayout>

        </DirectionalLayout>

        <TableLayout
            ohos:height="match_content"

            ohos:width="match_content"
            ohos:row_count="3"
            ohos:column_count="3">
            <Image
                ohos:height="60fp"
                ohos:width="60fp"
                ohos:scale_mode="stretch"
                ohos:id="$+id:left_up"
                ohos:visibility="invisible"
                ohos:image_src="$media:left_up">
            </Image>

            <Image
                ohos:height="70fp"
                ohos:width="70fp"
                ohos:scale_mode="stretch"
                ohos:id="$+id:up"
                ohos:image_src="$media:up">
            </Image>

            <Image
                ohos:height="60fp"
                ohos:width="60fp"
                ohos:scale_mode="stretch"
                ohos:id="$+id:right_up"
                ohos:visibility="invisible"
                ohos:image_src="$media:right_up">
            </Image>

            <Image
                ohos:height="70fp"
                ohos:width="70fp"
                ohos:scale_mode="stretch"
                ohos:id="$+id:left"
                ohos:image_src="$media:left">
            </Image>

            <Image
                ohos:height="60fp"
                ohos:width="60fp"
                ohos:scale_mode="stretch"
                ohos:id="$+id:center"
                ohos:visibility="invisible"
                ohos:image_src="$media:left">
            </Image>

            <Image
                ohos:height="70fp"
                ohos:width="70fp"
                ohos:scale_mode="stretch"
                ohos:id="$+id:right"
                ohos:image_src="$media:right">
            </Image>

            <Image
                ohos:height="60fp"
                ohos:width="60fp"
                ohos:scale_mode="stretch"
                ohos:id="$+id:left_down"
                ohos:visibility="invisible"
                ohos:image_src="$media:left_down">
            </Image>

            <Image
                ohos:height="70fp"
                ohos:width="70fp"
                ohos:scale_mode="stretch"
                ohos:id="$+id:down"
                ohos:image_src="$media:down">
            </Image>

            <Image
                ohos:height="60fp"
                ohos:width="60fp"
                ohos:scale_mode="stretch"
                ohos:id="$+id:right_down"
                ohos:visibility="invisible"
                ohos:image_src="$media:right_down">
            </Image>





        </TableLayout>


    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:alignment="center"
        ohos:orientation="horizontal"
        >
        <DirectionalLayout
            ohos:height="match_content"
            ohos:orientation="vertical"
            ohos:width="match_content">

            <Button
                ohos:height="45fp"
                ohos:width="110fp"
                ohos:text_color="#FFFFFF"
                ohos:background_element="$media:button"
                ohos:text="购物商城"
                ohos:text_size="20fp"
                ohos:id="$+id:store_btn"
                >
            </Button>

            <Button
                ohos:height="45fp"
                ohos:width="110fp"
                ohos:text_color="#FFFFFF"
                ohos:background_element="$media:button"
                ohos:text="返回界面"
                ohos:text_size="20fp"
                ohos:id="$+id:back_btn"
                >
            </Button>


        </DirectionalLayout>



        <Button
            ohos:height="60fp"
            ohos:width="150fp"
            ohos:text_color="#FFFFFF"
            ohos:left_margin="5fp"
            ohos:background_element="$media:button"
            ohos:text="开始游戏"
            ohos:text_size="20fp"
            ohos:id="$+id:play_btn"
            >
        </Button>

    </DirectionalLayout>




    <Image
        ohos:id="$+id:player"
        ohos:height="100"
        ohos:width="100"
        ohos:image_src="$media:player1"
        ohos:scale_mode="stretch"

        >
    </Image>

    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:id="$+id:player_name_text"
        ohos:text="player"
        ohos:text_size="10fp">
    </Text>










</DirectionalLayout>