<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="horizontal_center"
    ohos:orientation="vertical">

    <DirectionalLayout
        ohos:top_margin="20fp"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:left_margin="30fp"
        ohos:orientation="horizontal">

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text_size="18fp"
            ohos:text="玩家姓名:  ">

        </Text>

        <TextField
            ohos:height="match_content"
            ohos:text="小聪子"
            ohos:text_size="30fp"
            ohos:id="$+id:player_name_textfield"
            ohos:width="match_content">
        </TextField>

    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:top_margin="10fp"
        ohos:left_margin="30fp"
        ohos:orientation="horizontal">

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text_size="18fp"
            ohos:text="玩家口号:  ">

        </Text>

        <TextField
            ohos:height="match_content"
            ohos:text="我最爱我的女朋友"
            ohos:text_size="22fp"
            ohos:id="$+id:player_dialog_textfield"
            ohos:width="match_content">
        </TextField>

    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:alignment="bottom"
        ohos:orientation="horizontal"
        >
        <Image
            ohos:height="100fp"
            ohos:width="100fp"
            ohos:scale_mode="stretch"
            ohos:visibility="visible"
            ohos:id="$+id:girl_image"
            ohos:image_src="$media:girl1">

        </Image>

        <Image
            ohos:height="200fp"
            ohos:width="200fp"
            ohos:top_margin="20fp"
            ohos:id="$+id:player_image"
            ohos:image_src="$media:player1"
            ohos:scale_mode="stretch"
            >

        </Image>


    </DirectionalLayout>





    <Button
        ohos:height="match_content"
        ohos:id="$+id:choosecha_btn"
        ohos:width="match_content"
        ohos:text="选择人物"
        ohos:text_size="20fp"
        >
    </Button>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:orientation="horizontal">

        <DirectionalLayout
            ohos:margin="20fp"
            ohos:height="match_content"
            ohos:orientation="vertical"
            ohos:width="match_content">
            <DirectionalLayout
                ohos:height="match_content"
                ohos:orientation="horizontal"
                ohos:alignment="center"
                ohos:width="match_content">
                <Image
                    ohos:height="40fp"
                    ohos:width="40fp"
                    ohos:scale_mode="stretch"
                    ohos:image_src="$media:dengji">

                </Image>
                <Text
                    ohos:height="match_content"
                    ohos:left_margin="10fp"
                    ohos:width="match_content"
                    ohos:text_size="20fp"
                    ohos:id="$+id:level_text"
                    ohos:text="level.1">
                </Text>

            </DirectionalLayout>



            <DirectionalLayout
                ohos:height="match_content"
                ohos:orientation="horizontal"
                ohos:alignment="center"
                ohos:width="match_content">
                <Image
                    ohos:height="40fp"
                    ohos:width="40fp"
                    ohos:scale_mode="stretch"
                    ohos:image_src="$media:money">

                </Image>
                <Text
                    ohos:height="match_content"
                    ohos:left_margin="10fp"
                    ohos:width="match_content"
                    ohos:text_size="20fp"
                    ohos:id="$+id:money_text"
                    ohos:text="10">
                </Text>

            </DirectionalLayout>

        </DirectionalLayout>

        <DirectionalLayout
            ohos:margin="20fp"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:orientation="vertical"
            >
            <DirectionalLayout
                ohos:height="match_content"
                ohos:orientation="horizontal"
                ohos:alignment="center"
                ohos:width="match_content">
                <Image
                    ohos:height="40fp"
                    ohos:width="40fp"
                    ohos:scale_mode="stretch"
                    ohos:image_src="$media:xue">

                </Image>
                <Text
                    ohos:height="match_content"
                    ohos:left_margin="10fp"
                    ohos:width="match_content"
                    ohos:text_size="20fp"
                    ohos:id="$+id:xue_text"
                    ohos:text="100">
                </Text>

            </DirectionalLayout>

            <DirectionalLayout
                ohos:height="match_content"
                ohos:orientation="horizontal"
                ohos:alignment="center"
                ohos:width="match_content">
                <Image
                    ohos:height="40fp"
                    ohos:width="40fp"
                    ohos:scale_mode="stretch"
                    ohos:image_src="$media:dao">

                </Image>
                <Text
                    ohos:height="match_content"
                    ohos:left_margin="10fp"
                    ohos:width="match_content"
                    ohos:text_size="20fp"
                    ohos:id="$+id:gongji_text"
                    ohos:text="10">
                </Text>

            </DirectionalLayout>

            <DirectionalLayout
                ohos:height="match_content"
                ohos:orientation="horizontal"
                ohos:alignment="center"
                ohos:width="match_content">
                <Image
                    ohos:height="40fp"
                    ohos:width="40fp"
                    ohos:scale_mode="stretch"
                    ohos:image_src="$media:dunpai">

                </Image>

                <Text
                    ohos:height="match_content"
                    ohos:left_margin="10fp"
                    ohos:width="match_content"
                    ohos:text_size="20fp"
                    ohos:id="$+id:fangyu_text"
                    ohos:text="10">
                </Text>

            </DirectionalLayout>

        </DirectionalLayout>

    </DirectionalLayout>

    <Button
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_size="20fp"
        ohos:id="$+id:store_btn"
        ohos:text="购物商城"
        >
    </Button>


    <Button
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_size="20fp"
        ohos:id="$+id:new_begin_btn"
        ohos:text="新的开始"
        >
    </Button>
    <Button
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="选择关卡"
        ohos:text_size="20fp"
        ohos:id="$+id:choose_level_btn"
        >
    </Button>

    <Button
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_size="20fp"
        ohos:text="开始游戏"
        ohos:id="$+id:play_btn"
        >
    </Button>





</DirectionalLayout>