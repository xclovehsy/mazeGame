<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:padding="20fp"
    ohos:width="match_content"
    ohos:background_element="#6FDDAB6E"
    ohos:alignment="center"
    ohos:orientation="vertical">
    <Text
        ohos:height="match_content"
        ohos:text_size="30fp"
        ohos:id="$+id:monster_name"
        ohos:width="match_content"
        ohos:text="科学怪人">

    </Text>

    <Text
        ohos:height="match_content"
        ohos:id="$+id:monster_memo"
        ohos:top_margin="5fp"
        ohos:text_size="20fp"
        ohos:width="match_content"
        ohos:text="不热爱科学的孩子不乖">

    </Text>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:top_margin="5fp"
        ohos:alignment="center"
        ohos:layout_alignment="center"
        ohos:orientation="horizontal">

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:alignment="center"
            ohos:orientation="vertical">
            <DirectionalLayout
                ohos:height="match_content"
                ohos:orientation="horizontal"
                ohos:alignment="center"
                ohos:width="match_content">
                <Image
                    ohos:height="40fp"
                    ohos:width="40fp"
                    ohos:scale_mode="stretch"
                    ohos:image_src="$media:dao">

                </Image>
                <Text
                    ohos:height="match_content"
                    ohos:left_margin="10fp"
                    ohos:width="match_content"
                    ohos:text_size="20fp"
                    ohos:id="$+id:gong_play"
                    ohos:text="10">
                </Text>

            </DirectionalLayout>

            <DirectionalLayout
                ohos:top_margin="10fp"
                ohos:height="match_content"
                ohos:orientation="horizontal"
                ohos:alignment="center"
                ohos:width="match_content">
                <Image
                    ohos:height="40fp"
                    ohos:width="40fp"
                    ohos:scale_mode="stretch"
                    ohos:image_src="$media:dunpai">

                </Image>

                <Text
                    ohos:height="match_content"
                    ohos:left_margin="10fp"
                    ohos:width="match_content"
                    ohos:text_size="20fp"
                    ohos:id="$+id:fang_text"
                    ohos:text="10">
                </Text>

            </DirectionalLayout>


            <Image
                ohos:top_margin="10fp"
                ohos:height="100fp"
                ohos:width="100fp"
                ohos:scale_mode="stretch"
                ohos:id="$+id:play_image"
                ohos:image_src="$media:player1">

            </Image>

            <DirectionalLayout
                ohos:top_margin="10fp"
                ohos:height="match_content"
                ohos:orientation="horizontal"
                ohos:alignment="center"
                ohos:width="match_content">
                <Image
                    ohos:height="40fp"
                    ohos:width="40fp"
                    ohos:scale_mode="stretch"
                    ohos:image_src="$media:xue">

                </Image>

                <Text
                    ohos:height="match_content"
                    ohos:left_margin="10fp"
                    ohos:width="match_content"
                    ohos:text_size="20fp"
                    ohos:id="$+id:xue_play"
                    ohos:text="10">
                </Text>

            </DirectionalLayout>

        </DirectionalLayout>

        <Image
            ohos:height="50fp"
            ohos:margin="20fp"
            ohos:scale_mode="stretch"
            ohos:width="50fp"
            ohos:image_src="$media:pk">

        </Image>


        <DirectionalLayout
            ohos:height="match_content"
            ohos:alignment="center"
            ohos:width="match_content"
            ohos:orientation="vertical">
            <DirectionalLayout
                ohos:height="match_content"
                ohos:orientation="horizontal"
                ohos:alignment="center"
                ohos:width="match_content">
                <Image
                    ohos:height="40fp"
                    ohos:width="40fp"
                    ohos:scale_mode="stretch"
                    ohos:image_src="$media:fire">

                </Image>
                <Text
                    ohos:height="match_content"
                    ohos:left_margin="10fp"
                    ohos:width="match_content"
                    ohos:text_size="20fp"
                    ohos:id="$+id:gong_monster"
                    ohos:text="10">
                </Text>

            </DirectionalLayout>

            <DirectionalLayout
                ohos:top_margin="10fp"
                ohos:height="match_content"
                ohos:orientation="horizontal"
                ohos:alignment="center"
                ohos:width="match_content">
                <Image
                    ohos:height="40fp"
                    ohos:width="40fp"
                    ohos:scale_mode="stretch"
                    ohos:image_src="$media:pi">

                </Image>

                <Text
                    ohos:height="match_content"
                    ohos:left_margin="10fp"
                    ohos:width="match_content"
                    ohos:text_size="20fp"
                    ohos:id="$+id:fang_monster"
                    ohos:text="10">
                </Text>

            </DirectionalLayout>


            <Image
                ohos:top_margin="10fp"
                ohos:height="100fp"
                ohos:width="100fp"
                ohos:scale_mode="stretch"
                ohos:id="$+id:monster_image"
                ohos:image_src="$media:monster_big">

            </Image>

            <DirectionalLayout
                ohos:top_margin="10fp"
                ohos:height="match_content"
                ohos:orientation="horizontal"
                ohos:alignment="center"
                ohos:width="match_content">
                <Image
                    ohos:height="40fp"
                    ohos:width="40fp"
                    ohos:scale_mode="stretch"
                    ohos:image_src="$media:xue">

                </Image>

                <Text
                    ohos:height="match_content"
                    ohos:left_margin="10fp"
                    ohos:width="match_content"
                    ohos:text_size="20fp"
                    ohos:id="$+id:xue_monster"
                    ohos:text="10">
                </Text>

            </DirectionalLayout>

        </DirectionalLayout>




    </DirectionalLayout>



    <DirectionalLayout
        ohos:height="match_parent"
        ohos:width="match_content"
        ohos:orientation="horizontal"
        ohos:top_margin="20fp"
        ohos:alignment="horizontal_center">

        <Button
            ohos:id="$+id:give_up_btn"
            ohos:text="放弃挑战"
            ohos:text_size="20fp"
            ohos:background_element="$media:button"
            ohos:text_color="#FFFFFF"
            ohos:height="40fp"
            ohos:width="110fp"
            >
        </Button>

        <Button
            ohos:id="$+id:attack_btn"
            ohos:text="进攻"
            ohos:text_size="30fp"
            ohos:background_element="$media:button"
            ohos:text_color="#FFFFFF"
            ohos:left_margin="10fp"
            ohos:height="50fp"
            ohos:width="120fp"
            >
        </Button>

    </DirectionalLayout>




</DirectionalLayout>